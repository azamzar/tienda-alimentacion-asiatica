# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================
# Copy this file to .env.prod and fill in the values
# IMPORTANT: Never commit .env.prod to version control

# ===================================
# DATABASE CONFIGURATION
# ===================================
POSTGRES_USER=tienda_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_123
POSTGRES_DB=tienda_asiatica
POSTGRES_HOST=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===================================
# APPLICATION SETTINGS
# ===================================
APP_NAME=Tienda Alimentaci칩n Asi치tica API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# ===================================
# API CONFIGURATION
# ===================================
API_V1_PREFIX=/api/v1

# CORS Origins (comma-separated list of allowed origins)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://yourdomain.com

# ===================================
# SECURITY & JWT CONFIGURATION
# ===================================
# CRITICAL: Generate a secure SECRET_KEY using:
# openssl rand -hex 32
SECRET_KEY=GENERATE_A_SECURE_SECRET_KEY_HERE
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Reset
PASSWORD_RESET_TOKEN_EXPIRE_MINUTES=30

# ===================================
# REDIS CONFIGURATION
# ===================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_ENABLED=True
CACHE_TTL=300

# ===================================
# RATE LIMITING
# ===================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_AUTH_PER_MINUTE=5
RATE_LIMIT_REGISTER_PER_HOUR=3

# ===================================
# FILE UPLOAD CONFIGURATION
# ===================================
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# ===================================
# EMAIL CONFIGURATION
# ===================================
# Set to True to enable email sending
EMAIL_ENABLED=True

# SMTP Server Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False

# Email sender information
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Tienda Alimentaci칩n Asi치tica

# Frontend URL (for email links)
FRONTEND_URL=https://yourdomain.com

# ===================================
# LOGGING CONFIGURATION
# ===================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log

# ===================================
# MONITORING & OBSERVABILITY
# ===================================
# Sentry DSN (optional - for error tracking)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===================================
# BACKUP CONFIGURATION
# ===================================
BACKUP_DIR=/backup
BACKUP_RETENTION_DAYS=7
